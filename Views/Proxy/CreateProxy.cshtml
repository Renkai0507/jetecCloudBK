@using BkServer.ViewModels
@model BkServer.ViewModels.CreateProxyVM
@{ViewBag.Title = "帳號註冊";}
@section scripts
    {
    <script src="~/lib/jquery.js"></script>
    <script src="~/lib/jquery.validate.js"> </script>
    <script src="~/lib/jquery.validate.unobtrusive.js"> </script>
}
<h1>新增代理</h1>
<div class="row">
    <div class="col-md-12 ">
        <form  asp-controller="Proxy" asp-action="CreateProxy" method="post" class="mt-3">

            <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="form-group ">
                    <label asp-for="Name"></label>
                    <div class="col-sm-5">
                    <input asp-for="Name" class="form-control border "  />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
 
            
            <button type="submit" class="btn btn-primary" onclick="return confirm('確定要送出嗎?')" >創建</button>
           
        </form>
    </div>
</div>