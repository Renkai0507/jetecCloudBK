@model BkServer.ViewModels.RegistVM
@{ViewBag.Title = "帳號註冊";}
@section scripts
    {
    <script src="~/lib/jquery.js"></script>
    <script src="~/lib/jquery.validate.js"> </script>
    <script src="~/lib/jquery.validate.unobtrusive.js"> </script>
}
<h1>帳號註冊</h1>
<div class="row">
    <div class="col-md-12 ">
          @if (ViewBag.mailrepeat!=null)
            {
                <span class="text-danger">註冊信箱重複</span>
            }
        <form  asp-controller="User" asp-action="Create" method="post" class="mt-3">

            <div asp-validation-summary="All" class="text-danger"> </div>
                <div class="form-group ">
                    <label asp-for="UserId"></label>
                    <div class="col-sm-5">
                    <input asp-for="UserId" class="form-control border "  />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                    @if (ViewBag.repeat!=null)
                    {
                        <span class="text-danger">註冊帳號重複</span>
                    }
                   
                    </div>
                </div>
         
                <div class="form-group ">
                    <label asp-for="Pwd"></label>
                    <div class="col-sm-5">
                    <input asp-for="Pwd" class="form-control border "/>
                    <span asp-validation-for="Pwd" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label asp-for="ConfirmPwd"></label>
                    <div class="col-sm-5">
                    <input  asp-for="ConfirmPwd" class="form-control border ">
                    <span asp-validation-for="ConfirmPwd" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group ">
                    <label asp-for="Name"></label>
                    <div class="col-sm-5">
                    <input asp-for="Name" class="form-control border " />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group ">
                    <label asp-for="Email"></label>
                    <div class="col-sm-5">
                    <input asp-for="Email" class="form-control border " />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                  <div class="form-group ">
                    <label asp-for="ConfirmEmail"></label>
                    <div class="col-sm-5">
                    <input asp-for="ConfirmEmail" class="form-control border " />
                    <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                    </div>
                </div>
                  <div class="form-group ">
                    <label asp-for="usergroup"></label>
                    <div class="col-sm-5">
                    <input asp-for="usergroup" class="form-control border " />
                    <span asp-validation-for="usergroup" class="text-danger"></span>
                    </div>
                </div>
            
            <button type="submit" class="btn btn-primary" onclick="return confirm('確定要送出嗎?')" >註冊</button>
           
        </form>
    </div>
</div>